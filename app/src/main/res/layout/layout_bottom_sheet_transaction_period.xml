<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/ic_close"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@drawable/recyclerview_corner">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction Period"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="18sp"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/from_date"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="From"
                android:textColor="@color/grey"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:paddingHorizontal="16dp"
                app:strokeColor="@color/bord"
                android:drawableEnd="@drawable/calender_icon"
                android:background="@drawable/calender_box_border"
                android:textCursorDrawable="@drawable/color_cursor" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/to_date"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="To"
            android:enabled="false"
            android:textColor="@color/grey"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            android:paddingHorizontal="16dp"
            android:drawableEnd="@drawable/calender_icon"
            android:background="@drawable/calender_box_border"
            android:textCursorDrawable="@drawable/color_cursor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/apply_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:background="@drawable/update_button_fill_green"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:paddingHorizontal="40dp"
            android:layout_marginRight="40dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/clear_text_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:textSize="16sp"/>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>